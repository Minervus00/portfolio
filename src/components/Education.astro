---
import portfolio from '@data/portfolio.json';
const { formation } = portfolio;
---

<section id="formation" class="py-20 bg-white dark:bg-slate-800">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" class="mb-16 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300 text-sm font-medium mb-4">
        Parcours
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 dark:text-white font-heading">
        Formation Académique
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-slate-600 dark:text-slate-300">
        Mon parcours académique et mes qualifications.
      </p>
    </div>
    
    <!-- Timeline -->
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-primary-200 dark:bg-primary-800"></div>
      
      <!-- Education items -->
      {formation.map((item, index) => (
        <div 
          class={`relative z-10 mb-12 flex items-center ${index % 2 === 0 ? 'justify-start' : 'justify-end'}`}
          data-aos={index % 2 === 0 ? 'fade-right' : 'fade-left'}
          data-aos-delay={index * 100}
        >
          <div class={`w-full md:w-5/12 ${index % 2 !== 0 ? 'md:ml-auto' : ''}`}>
            <div class="p-6 bg-white dark:bg-slate-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
              <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-600 dark:bg-primary-900/50 dark:text-primary-300 text-xs font-medium mb-3">
                {item.periode}
              </span>
              <h3 class="text-xl font-semibold text-slate-800 dark:text-white mb-2 font-heading">
                {item.diplome}
              </h3>
              <p class="text-slate-600 dark:text-slate-300 mb-1">
                {item.etablissement}
              </p>
              {item.mention && (
                <p class="text-primary-500 font-medium text-sm">
                  Mention: {item.mention}
                </p>
              )}
              {item.statut && (
                <span class="inline-block mt-2 py-1 px-2 rounded bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300 text-xs font-medium">
                  {item.statut}
                </span>
              )}
            </div>
          </div>
          
          <!-- Timeline node -->
          <div class="absolute left-1/2 transform -translate-x-1/2 w-6 h-6 rounded-full bg-primary-500 dark:bg-primary-400 border-4 border-white dark:border-slate-800 z-10 flex items-center justify-center">
            <span class="animate-ping absolute inline-flex h-3 w-3 rounded-full bg-primary-400 opacity-75"></span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>