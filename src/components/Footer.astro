---
import portfolio from '@data/portfolio.json';
const { informations_personnelles, liens_professionnels } = portfolio;
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-100 dark:bg-slate-800 py-12 mt-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div data-aos="fade-up" data-aos-delay="100">
        <h3 class="text-lg font-semibold text-primary-600 dark:text-primary-400 mb-4 font-heading">À propos</h3>
        <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
          {portfolio.resume_professionnel.description.substring(0, 100)}...
        </p>
        <div class="flex items-center space-x-4">
          <a 
            href={liens_professionnels.github} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-700 dark:text-slate-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
            aria-label="GitHub"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a 
            href={liens_professionnels.linkedin} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-700 dark:text-slate-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
            aria-label="LinkedIn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a 
            href={`mailto:${informations_personnelles.email}`} 
            class="text-slate-700 dark:text-slate-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
            aria-label="Email"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div data-aos="fade-up" data-aos-delay="200">
        <h3 class="text-lg font-semibold text-primary-600 dark:text-primary-400 mb-4 font-heading">Navigation rapide</h3>
        <ul class="space-y-2">
          {
            portfolio.sections_portfolio.map((section) => (
              <li>
                <a 
                  href={`#${section.toLowerCase().replace(/\s+/g, '-')}`}
                  class="text-sm text-slate-600 dark:text-slate-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
                >
                  {section}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      
      <!-- Contact -->
      <div data-aos="fade-up" data-aos-delay="300">
        <h3 class="text-lg font-semibold text-primary-600 dark:text-primary-400 mb-4 font-heading">Contact</h3>
        <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-300">
          <li class="flex items-start space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <span>{informations_personnelles.email}</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <span>{informations_personnelles.telephone}</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span>{informations_personnelles.adresse}</span>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-slate-200 dark:border-slate-700 mt-10 pt-6">
      <p class="text-center text-sm text-slate-500 dark:text-slate-400">
        &copy; {currentYear} {informations_personnelles.nom.split(' ')[0]} {informations_personnelles.nom.split(' ')[2]}. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>