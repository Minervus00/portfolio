---
import portfolio from '@data/portfolio.json';
const { resume_professionnel, informations_personnelles, langues, soft_skills, centres_interet } = portfolio;
---

<section id="à-propos" class="py-20 bg-white dark:bg-slate-800">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" class="mb-16 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300 text-sm font-medium mb-4">
        À propos
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 dark:text-white font-heading">
        Qui suis-je ?
      </h2>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      <!-- Left column: Key info -->
      <div class="lg:col-span-7" data-aos="fade-right">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <h3 class="text-2xl font-semibold mb-4 text-slate-800 dark:text-white font-heading">
            Bienvenue dans mon univers
          </h3>
          
          <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
            {resume_professionnel.description}
          </p>
          
          <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
            <strong class="text-primary-600 dark:text-primary-400">Objectif actuel:</strong> {resume_professionnel.objectif}
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
            <!-- Languages -->
            <div class="bg-slate-50 dark:bg-slate-700 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <h4 class="text-xl font-semibold mb-4 text-primary-600 dark:text-primary-400 font-heading">
                <span class="inline-block mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7 2a1 1 0 011 1v1h3a1 1 0 110 2H9.578a18.87 18.87 0 01-1.724 4.78c.29.354.596.696.914 1.026a1 1 0 11-1.44 1.389 17.513 17.513 0 01-.368-.38c-.36.37-.738.716-1.132 1.038a1 1 0 01-1.376-1.455c.335-.27.66-.564.969-.844a18.817 18.817 0 01-1.027-1.08C4.1 8.9 4.03 9.48 4 10a1 1 0 11-2 0c.03-.78.13-1.713.378-2.557.24-.81.6-1.58 1.078-2.18.068-.09.138-.175.209-.261A1 1 0 114 3a1 1 0 011-1h2zm-5 10a1 1 0 011-1h3a1 1 0 110 2H3a1 1 0 01-1-1zm14-1a1 1 0 110 2H9a1 1 0 110-2h6zm-5-2a1 1 0 110 2H8a1 1 0 110-2h2zm2-6a1 1 0 011 1v1h3a1 1 0 110 2h-3v1a1 1 0 11-2 0V8h-3a1 1 0 010-2h3V5a1 1 0 011-1z" clip-rule="evenodd" />
                  </svg>
                </span>
                Langues
              </h4>
              <ul class="space-y-3">
                {langues.map(langue => (
                  <li class="flex justify-between">
                    <span class="text-slate-700 dark:text-slate-200">{langue.langue}</span>
                    <span class="text-primary-500 text-sm">{langue.niveau}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Soft Skills -->
            <div class="bg-slate-50 dark:bg-slate-700 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
              <h4 class="text-xl font-semibold mb-4 text-primary-600 dark:text-primary-400 font-heading">
                <span class="inline-block mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6.672 1.911a1 1 0 10-1.932.518l.259.966a1 1 0 001.932-.518l-.26-.966zM2.429 4.74a1 1 0 10-.517 1.932l.966.259a1 1 0 00.517-1.932l-.966-.26zm8.814-.569a1 1 0 00-1.415-1.414l-.707.707a1 1 0 101.415 1.415l.707-.708zm-7.071 7.072l.707-.707A1 1 0 003.465 9.12l-.708.707a1 1 0 001.415 1.415zm3.2-5.171a1 1 0 00-1.3 1.3l4 10a1 1 0 001.823.075l1.38-2.759 3.018 3.02a1 1 0 001.414-1.415l-3.019-3.02 2.76-1.379a1 1 0 00-.076-1.822l-10-4z" clip-rule="evenodd" />
                  </svg>
                </span>
                Soft Skills
              </h4>
              <ul class="space-y-3">
                {soft_skills.map(skill => (
                  <li class="flex items-center">
                    <span class="h-2 w-2 rounded-full bg-primary-400 mr-2"></span>
                    <span class="text-slate-700 dark:text-slate-200">{skill}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Interests -->
            <div class="bg-slate-50 dark:bg-slate-700 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow md:col-span-2">
              <h4 class="text-xl font-semibold mb-4 text-primary-600 dark:text-primary-400 font-heading">
                <span class="inline-block mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                  </svg>
                </span>
                Centres d'intérêt
              </h4>
              <div class="flex flex-wrap gap-2">
                {centres_interet.map(interet => (
                  <span class="inline-block py-1.5 px-3 rounded-full bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 text-sm hover:shadow-md transition-shadow">
                    {interet}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right column: Stats / Visual information -->
      <div class="lg:col-span-5" data-aos="fade-left">
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 dark:from-slate-700 dark:to-slate-800 rounded-3xl p-8 shadow-lg">
          <!-- Personal info card -->
          <div class="mb-8">
            <h3 class="text-2xl font-semibold mb-6 text-primary-600 dark:text-primary-400 font-heading">
              Informations
            </h3>
            
            <ul class="space-y-4">
              <li class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 005 10a6 6 0 0012 0c0-.522-.068-1.028-.196-1.5A5.001 5.001 0 0010 7z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400">Nom complet</h4>
                  <p class="text-slate-800 dark:text-white">{informations_personnelles.nom}</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400">Email</h4>
                  <p class="text-slate-800 dark:text-white">{informations_personnelles.email}</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400">Téléphone</h4>
                  <p class="text-slate-800 dark:text-white">{informations_personnelles.telephone}</p>
                </div>
              </li>
              
              <li class="flex items-start">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-slate-500 dark:text-slate-400">Adresse</h4>
                  <p class="text-slate-800 dark:text-white">{informations_personnelles.adresse}</p>
                </div>
              </li>
            </ul>
          </div>
          
          <!-- Download CV Button -->
          <div class="flex justify-center">
            <button 
              class="group relative inline-flex items-center justify-center overflow-hidden rounded-lg bg-gradient-to-br from-primary-500 to-secondary-500 p-0.5 text-sm font-medium text-gray-900 hover:text-white focus:outline-none focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-800"
            >
              <span class="relative rounded-md bg-white dark:bg-slate-900 px-5 py-2.5 transition-all duration-300 ease-in-out group-hover:bg-opacity-0 dark:text-white">
                <span class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  Télécharger mon CV
                </span>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>