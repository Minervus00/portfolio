---
import portfolio from '@data/portfolio.json';
const { experiences_professionnelles } = portfolio;
---

<section id="expérience" class="py-20 bg-slate-50 dark:bg-slate-900">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" class="mb-16 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300 text-sm font-medium mb-4">
        Parcours
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-800 dark:text-white font-heading">
        Expérience Professionnelle
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-slate-600 dark:text-slate-300">
        Mon parcours professionnel dans le domaine de l'IA et de la data science.
      </p>
    </div>
    
    <!-- Timeline Vertical -->
    <div class="relative mx-auto max-w-4xl">
      <!-- Timeline line -->
      <div class="absolute left-3 md:left-1/2 top-0 h-full w-0.5 bg-primary-200 dark:bg-primary-800 transform md:-translate-x-1/2"></div>
      
      <!-- Experience items -->
      {experiences_professionnelles.map((exp, index) => (
        <div 
          class="relative z-10 mb-12"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="flex flex-col md:flex-row items-start md:items-center">
            <!-- Timeline node -->
            <div class="absolute left-3 md:left-1/2 w-6 h-6 rounded-full bg-primary-500 border-4 border-white dark:border-slate-900 transform md:-translate-x-1/2 flex items-center justify-center">
              <span class="animate-ping absolute inline-flex h-3 w-3 rounded-full bg-primary-400 opacity-75"></span>
            </div>
            
            <!-- Date for mobile -->
            <div class="md:hidden pl-12 mb-4">
              <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-600 dark:bg-primary-900/50 dark:text-primary-300 text-xs font-medium">
                {exp.periode}
              </span>
            </div>
            
            <!-- Left content (date) - desktop -->
            <div class="hidden md:block w-1/2 pr-10 text-right">
              <span class="inline-block py-1 px-3 rounded-full bg-primary-100 text-primary-600 dark:bg-primary-900/50 dark:text-primary-300 text-sm font-medium">
                {exp.periode}
              </span>
            </div>
            
            <!-- Right content (experience details) -->
            <div class="pl-12 md:pl-10 md:w-1/2">
              <div class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <h3 class="text-xl font-semibold text-slate-800 dark:text-white mb-2 font-heading">
                  {exp.poste}
                </h3>
                <p class="text-primary-600 dark:text-primary-400 font-medium">
                  {exp.entreprise} {exp.lieu && `• ${exp.lieu}`}
                </p>
                
                {exp.description && (
                  <div class="mt-3 pt-3 border-t border-slate-200 dark:border-slate-700">
                    <ul class="list-disc list-inside text-slate-600 dark:text-slate-300 space-y-1">
                      {exp.description.map(item => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>